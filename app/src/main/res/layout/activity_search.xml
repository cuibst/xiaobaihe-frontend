<!--        android:layout_height="match_parent"-->
<!--        android:layout_below="@id/lin1"-->
<!--        ></TextView>-->
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/search_rcy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lin1">
        
    </com.jcodecraeer.xrecyclerview.XRecyclerView>
