        <RelativeLayout
            android:id="@+id/relate_1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="vertical"
            android:layout_below="@+id/searchline">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tablayout1"
                android:layout_width="match_parent"
                app:tabIndicatorColor="@color/purple_200"
                android:background="@drawable/orange_radius"
                app:tabSelectedTextColor="@color/purple_200"
                android:layout_height="40dp"
                app:tabMode="scrollable"
                android:layout_toLeftOf="@+id/tab_add">
            </com.google.android.material.tabs.TabLayout>



            <ImageView
                android:id="@+id/tab_add"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="#FFFFFF"
                android:src="@drawable/tab_extra"
                />
        </RelativeLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpgr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relate_1">

