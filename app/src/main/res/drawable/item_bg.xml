<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/common_bg"/>
                    <corners android:radius="3dp"/>
                    <stroke android:width="1dp" android:color="@color/common_stroke"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/selected_bg"> </solid>
            <stroke android:width="1dp" android:color="@color/selected_stroke"></stroke>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5dp" android:color="@color/pressed_stroke"/>
            <solid android:color="@color/pressed_bg"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="0.5dp" android:color="@color/normal_stroke"/>
            <solid android:color="@color/normal_bg"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
</selector>